\newenvironment{blockdefinition}[1]{%
	\setbeamercolor{block title}{bg=colordefinition!20,fg=black}
	\begin{block}{\textbf{Definition (#1)}}}{\end{block}}

\newenvironment{myexample}[1]{%
	\setbeamercolor{block title}{bg=colorexample!50,fg=black}
	\begin{block}{\textbf{Beispiel (#1)}}}{\end{block}}

